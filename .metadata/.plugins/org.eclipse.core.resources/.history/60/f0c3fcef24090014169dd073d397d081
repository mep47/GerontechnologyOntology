<script type="text/javascript">

function showLoginPopup()
{
	$('body').popup({title:'Alert',id:'myTestPopup'});
}

var $tree = $('#tree1');
$tree.tree({
    data: data
});

var options = {"backdrop" : "static"}

$tree.bind(
 'tree.click',
 function(event) {
    node = event.node;
	changeModalBodyText(node.name);
	$('#basicModal').modal('show');
 }
);

</script>

